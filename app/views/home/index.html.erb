<style type="text/css">
  .recent {
	#background-color: #6D9CBE;
	background-color: #2B2B2B;
	padding-left:1em;
	color: white;
	font-weight: bold;
  }
  .toprounded{
	-moz-border-radius-topleft:4px;
	-moz-border-radius-topright:4px;
	border-top-left-radius: 4px;
	border-top-right-radius: 4px;
  }
  .list-contents {
	padding-left: .5em;
	padding-right: .5em;
  }
  .list-contents h4 {
	margin-bottom: .5em;
  }
  .list-top {
	padding-top: .5em;
  }
  .list-bottom {
	border-bottom: 1px dotted #999999;
	padding-top: .5em;
  }
</style>

<div class="span-18 last">
	<div class="recent toprounded">
		<span class="large">Recent Snippets</span>
	</div>	
</div>

<% @snippets.each do |snippet| %>
<div class="span-15" style="background-color:grary">
	<div class="list-contents list-top">
		<h4><%= link_to snippet.title, edit_snippet_path(snippet), :style => "text-decoration: none" %></h4>
	</div>	
</div>
<div class="span-3 last" style="text-align: right">
	<div class="list-contents list-top">
		<h4 class="quiet" style="font-weight:bold"><%= snippet.language.camelize %></h4>
	</div>	
</div>
<div class="span-10" style="background-color:grary">
	<div class="list-contents">
		tag1, tag2, tag3
	</div>	
</div>
<div class="span-8 last" style="text-align: right">
	 <div class="list-contents quiet" style="font-style: italic">
		<%= snippet.author.username %> / <%= time_ago_in_words(snippet.created_at) %> ago
	 </div>	
</div>
<div class="span-18 last list-bottom"></div>
<% end %>